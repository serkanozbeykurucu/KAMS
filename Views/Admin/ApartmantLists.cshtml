@model IEnumerable<KAMS.Models.C_ApartmantDetailView>

@{
    ViewBag.Title = "ApartmantLists";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4">Apartmant Lists</h2>


<div class="container-fluid">
    
    <section id="main-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <div id="bootstrap-data-table-export_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <div class="dataTables_length" id="bootstrap-data-table-export_length">
                                    <label>
                                        Show
                                        <select name="bootstrap-data-table-export_length" aria-controls="bootstrap-data-table-export" class="form-control input-sm">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="-1">All</option>
                                        </select>  entries
                                    </label>
                                </div>
                                <div class="dt-buttons">
                                    <a class="dt-button buttons-copy buttons-html5" tabindex="0" aria-controls="bootstrap-data-table-export" href="#"><span>Copy</span></a>
                                    <a class="dt-button buttons-csv buttons-html5" tabindex="0" aria-controls="bootstrap-data-table-export"><span>CSV</span></a>
                                    <a class="dt-button buttons-excel buttons-html5" tabindex="0" aria-controls="bootstrap-data-table-export"><span>Excel</span></a>
                                    <a class="dt-button buttons-pdf buttons-html5" tabindex="0" aria-controls="bootstrap-data-table-export"><span>PDF</span></a>
                                    <a class="dt-button buttons-print" tabindex="0" aria-controls="bootstrap-data-table-export"><span>Print</span></a>
                                </div>
                                <div id="bootstrap-data-table-export_filter" class="dataTables_filter">
                                    <label>
                                        Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="bootstrap-data-table-export">
                                    </label>
                                </div>
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table-export_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 237px;">Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Country: activate to sort column ascending" style="width: 370px;">Country</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="City: activate to sort column ascending" style="width: 184px;">City</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Towns: activate to sort column ascending" style="width: 148px;">Towns</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="District: activate to sort column ascending" style="width: 148px;">District</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Address: activate to sort column ascending" style="width: 148px;">Address</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Aidat: activate to sort column ascending" style="width: 148px;">Aidat</th>
                                            <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1" aria-label="Yetki: activate to sort column ascending" style="width: 148px;">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1">@Html.DisplayFor(modelItem => item.NAME)</td>
                                                <td class="sorting_1">@Html.DisplayFor(modelItem => item.COUNTRY)</td>
                                                <td>@Html.DisplayFor(modelItem => item.CITY)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TOWNS)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DISTRICT)</td>
                                                <td>@Html.DisplayFor(modelItem => item.C_ADDRESS)</td>
                                                <td>
                                                    @*@{ Html.RenderAction("ApartmantAidat", "Admin");} TL*@
                                                    @Html.DisplayFor(modelItem => item.AIDAT)
                                                </td>
                                                <td>
                                                    <a href="~/Admin/ApartmantDetail/@item.ID" class="btn btn-info btn-rounded">Detail</a>
                                                    <a href="~/Admin/ApartmantDelete/@item.ID" class="btn btn-danger btn-rounded my-1">Delete</a>
                                                    <a href="~/Admin/ApartmantEdit/@item.ID" class="btn btn-success btn-rounded my-1">Update</a>
                                                    <a href="~/Admin/ApartmanBlocAdd/@item.ID" class="btn btn-secondary btn-rounded my-1">Apartman Bloc Add</a>
                                                    <a href="~/Admin/ApartmantKatAdd/@item.ID" class="btn btn-outline-primary btn-rounded my-1">Apartman Kat Add</a>
                                                    <a href="~/Admin/ApartmantDaireAdd/@item.ID" class="btn btn-outline-warning btn-rounded my-1">Apartman Daire Add</a>
                                                    <a href="~/Admin/ApartmanAidatAdd/@item.ID" class="btn btn-outline-dark btn-rounded my-1">Apartman Aidat Add</a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="dataTables_info" id="bootstrap-data-table-export_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
                                <div class="dataTables_paginate paging_simple_numbers" id="bootstrap-data-table-export_paginate">
                                    <ul class="pagination">
                                        <li class="paginate_button previous disabled" id="bootstrap-data-table-export_previous">
                                            <a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="0" tabindex="0">Previous</a>
                                        </li>
                                        <li class="paginate_button active"><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="1" tabindex="0">1</a></li>
                                        <li class="paginate_button "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="2" tabindex="0">2</a></li>
                                        <li class="paginate_button "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="3" tabindex="0">3</a></li>
                                        <li class="paginate_button "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="4" tabindex="0">4</a></li>
                                        <li class="paginate_button "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="5" tabindex="0">5</a></li>
                                        <li class="paginate_button "><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="6" tabindex="0">6</a></li>
                                        <li class="paginate_button next" id="bootstrap-data-table-export_next"><a href="#" aria-controls="bootstrap-data-table-export" data-dt-idx="7" tabindex="0">Next</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>
