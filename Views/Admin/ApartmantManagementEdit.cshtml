@model KAMS.Models.AMU

@{
    ViewBag.Title = "ApartmantManagementEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center">Apartmant Management Update Panel</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.ADID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ADID", null, "-- Apartman Adı ---", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ADID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("UID", null, "--- Yönetici KullanıcıAdı ---", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-rounded btn-block" />
                    @Html.ActionLink("Back to List", "ApartmanManagmemtUser", null, new { @class = "btn btn-default btn-rounded my-3" })

                </div>
            </div>
        </div>
    }


</div>